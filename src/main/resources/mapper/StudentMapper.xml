<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zj.demo.mapper.StudentMapper">

    <select id="findAllStudents" resultType="com.zj.demo.entity.Student">
        select * from student
    </select>

    <select id="getStudentsTotalNum" resultType="int">
        select count(*) from student
    </select>

    <select id="findStudentById" parameterType="string" resultType="com.zj.demo.entity.Student">
        select * from student
        where id=#{id}
    </select>


    <select id="findStudentByNameAndPassword" parameterType="string" resultType="com.zj.demo.entity.Student">
        select * from student
        where name=#{name} and password=#{password}
    </select>

    <select id="findStudentsByKeyword" parameterType="string" resultType="com.zj.demo.entity.Student">
        select * from student
        where name like concat('%',#{keywords},'%') or age like concat('%',#{keywords},'%') or sex like concat('%',#{keywords},'%')
           or id like concat('%',#{keywords},'%')
    </select>

    <insert id="addStudent" parameterType="com.zj.demo.entity.Student">
        insert into student
        values(#{id},#{name},#{password},#{sex},#{age},#{state})
    </insert>

    <update id="updateStudentById" parameterType="com.zj.demo.entity.Student">
        update student set
        name=#{name},
        age=#{age},
        sex=#{sex},
        password=#{password}
        where id=#{id}
    </update>

    <update id="updatePasswordByStudentId" parameterType="string">
        update student set
               password=#{password}
        where id=#{id}
    </update>

    <delete id="deleteStudentById" parameterType="string">
        delete from student where id=#{id}
    </delete>



</mapper>