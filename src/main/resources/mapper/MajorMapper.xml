<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zj.demo.mapper.MajorMapper">

    <select id="findAllMajors" resultType="com.zj.demo.entity.Major">
        select * from major
    </select>

    <select id="getMajorTotalNum" resultType="int">
        select count(*) from major
    </select>

    <select id="findMajorById" parameterType="string" resultType="com.zj.demo.entity.Major">
        select * from major
        where id=#{id}
    </select>

    <select id="findMajorsByKeyword" parameterType="string" resultType="com.zj.demo.entity.Major">
        select * from major
        where name like concat('%',#{keywords},'%') or id like concat('%',#{keywords},'%')
           or state like concat('%',#{keywords},'%')
    </select>

    <insert id="addMajor" parameterType="com.zj.demo.entity.Major">
        insert into major
        values(#{id},#{name},#{state})
    </insert>

    <update id="updateMajorById" parameterType="com.zj.demo.entity.Major">
        update major set
                           name=#{name},
                           state=#{state}
        where id=#{id}
    </update>

    <update id="updateMajorStateById" parameterType="string">
        update major set
        state=#{state}
        where id=#{id}
    </update>

    <delete id="deleteMajorById" parameterType="string">
        delete from major where id=#{id}
    </delete>

</mapper>